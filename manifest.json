{
  "manifest_version": 3,
  "name": "Text-to-Speech",
  "version": "1.0",
  "description": "Select text on a webpage and use a context menu to have it spoken aloud.",
  "permissions": [
    "storage"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
